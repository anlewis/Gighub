<ul class="list-group">
  <li class="list-group-item">
    <%= image_tag(@item.image_url, size: "100", alt: @item.title, class: "card-img-top") %>
    <br />
    <h2> <%= @item.title %> </h2>
    <h4> <% if @item.retired? %><em>RETIRED</em><% end %> </h4>
    <h3>Unit: <%= @item.unit.titleize %></h3>
    <h3>Price per Unit: <%= in_dollars(@item.unit_price) %></h3>
    <h3>Description: <%= @item.description %></h3>
    <h3>Category: <%= @item.category.name %></h3>
    <%= render 'add_to_cart_button', item: @item %>
  </li>
</ul>
