<!DOCTYPE html>
<html>
  <head>
    <title>Gighub</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <h1>Gighub</h1>
    </header>
    <%= render 'shared/navigation' %>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: name %>
    <% end %>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
