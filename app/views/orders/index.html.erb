<h2>Your Orders</h2>

<% if @orders.empty? %>
  <p>You haven't made any orders.</p>
<% else %>
  <table id='order-table'>
    <th> Order Number </th>
    <th> Date Ordered </th>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to "Order ##{order.id}", order_path(order) %></td>
        <td><%= order.created_at.strftime("%m/%d/%Y") %></td>
      </tr>
    <% end %>
  </table>
<% end %>
