<h2>Your Orders</h2>

<% if @orders.empty? %>
  <p>You haven't made any orders.</p>
<% else %>
  <%  @orders.each do |order| %>
    <p>Ordered: <%= order.created_at %></p>
    <% unless order.ordered? %>
      <p><%= order.status.capitalize %>: <%= order.updated_at %></p>
    <% end %>

    <%= render order.order_items %>

    <b>Total Cost: <%= in_dollars(order.total_cost) %></b>
  <% end %>
<% end %>
