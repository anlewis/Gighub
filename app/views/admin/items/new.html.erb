<h2>New Item</h2>

<%= form_for [:admin, @item] do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :price %>
  <%= f.number_field :price, step: '0.01', min:'0.01' %>

  <%= f.label :image_url %>
  <%= f.url_field :image_url %>

  <%= f.label :category_id, 'Category' %>
  <%= f.collection_select :category_id,
    @categories,
    :id, :name,
    prompt: true
  %>

  <%= f.submit %>

<% end %>
